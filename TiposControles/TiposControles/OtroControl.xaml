<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TiposControles.OtroControl">
    <ContentView.Content>
        <StackLayout Margin="0,40,0,0">
            <Label Text="OTROS CONTROLES"
                 FontSize="40"
                 TextColor="Red"
                 HorizontalOptions="CenterAndExpand"
                 />
            <ProgressBar Progress="0.0"
                       x:Name="progreso"
                       HorizontalOptions="FillAndExpand"/>

            <Label Text="SLIDER" HorizontalOptions="CenterAndExpand"/>
            <Slider x:Name="slider1" Minimum="0" Maximum="100" Value="15" HorizontalOptions="FillAndExpand"/>
            <Label x:Name="lblslider" FontSize="Medium" TextColor="Blue"/>


            <BoxView WidthRequest="200" HeightRequest="2" BackgroundColor="Red"/>
            <Label Text="Stepper" FontSize="Medium"/>
            <Stepper Increment="0.1" x:Name="stepper1" Minimum="0" Maximum="30" HorizontalOptions="Center"/>
            <Label x:Name="lblstepper" FontSize="Medium" TextColor="Red"/>

        </StackLayout>
    </ContentView.Content>
</ContentPage>